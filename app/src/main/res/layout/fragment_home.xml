<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:tools             = "http://schemas.android.com/tools"
    android:layout_width    = "match_parent"
    android:layout_height   = "match_parent"
    xmlns:app               = "http://schemas.android.com/apk/res-auto"
    tools:context           = ".ui.home.HomeFragment">

    <ScrollView
        android:layout_width    = "match_parent"
        android:layout_height   = "match_parent">
        <LinearLayout
            android:layout_width        = "match_parent"
            android:layout_height       = "wrap_content"
            android:layout_marginTop    = "25dp"
            android:layout_marginLeft   = "20dp"
            android:layout_marginRight  = "20dp"
            android:orientation         = "vertical">

            <!-- Search Bar -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "60dp">
                <EditText
                    android:layout_width            = "match_parent"
                    android:layout_height           = "match_parent"
                    android:paddingStart            = "20dp"
                    android:hint                    = "Kamu mau belajar apa hari ini?"
                    android:textSize                = "14dp"
                    android:textColorHint           = "#808080"
                    android:background              = "@drawable/bgedittext"
                    android:backgroundTint          = "@color/white"/>
                <ImageView
                    android:id                      = "@+id/searchBar"
                    android:layout_width            = "45dp"
                    android:layout_height           = "match_parent"
                    android:paddingEnd              = "20dp"
                    android:layout_alignParentRight = "true"
                    android:src                     = "@drawable/ic_search"/>
            </RelativeLayout>

            <!-- Special Lesson -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "25dp"
                android:text                = "Kejar Materi UTBK dan Mandiri"
                android:textSize            = "20dp"
                android:textStyle           = "bold"
                android:textColor           = "@color/black"/>
            <LinearLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:orientation         = "horizontal">
                <Button
                    android:id                      = "@+id/btn_materi"
                    android:layout_width            = "111dp"
                    android:layout_height           = "80dp"
                    android:layout_marginRight      = "6dp"
                    android:text                    = "Materi"
                    android:textSize                = "18dp"
                    android:textStyle               = "bold"
                    android:textColor               = "@color/black"
                    android:backgroundTint          = "#FED900"
                    app:cornerRadius                = "15dp"
                    android:textAllCaps             = "false"/>
                <Button
                    android:id                      = "@+id/btn_panduan"
                    android:layout_width            = "116dp"
                    android:layout_height           = "80dp"
                    android:text                    = "Panduan"
                    android:textSize                = "18dp"
                    android:textStyle               = "bold"
                    android:textColor               = "@color/black"
                    android:backgroundTint          = "#FED900"
                    app:cornerRadius                = "15dp"
                    android:textAllCaps             = "false"/>
                <Button
                    android:id                      = "@+id/btn_mandiri"
                    android:layout_width            = "111dp"
                    android:layout_height           = "80dp"
                    android:layout_marginLeft       = "6dp"
                    android:text                    = "Mandiri"
                    android:textSize                = "18dp"
                    android:textStyle               = "bold"
                    android:textColor               = "@color/black"
                    android:backgroundTint          = "#FED900"
                    app:cornerRadius                = "15dp"
                    android:textAllCaps             = "false"/>
            </LinearLayout>

            <!-- Lessons -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "25dp"
                android:text                = "Pelajaran Sekolah"
                android:textSize            = "20dp"
                android:textStyle           = "bold"
                android:textColor           = "@color/black"/>
            <LinearLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:orientation         = "vertical">
                <LinearLayout
                    android:layout_width            = "match_parent"
                    android:layout_height           = "wrap_content"
                    android:orientation             = "horizontal">
                    <LinearLayout
                        android:id                      = "@+id/lesson_mtkBsc"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_mtk_bsc"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Matematika Dasar"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_mtkIpa"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_mtk_ipa"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Matematika IPA"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_idn"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_idn"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Bahasa Indonesia"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_eng"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_eng"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Bahasa Inggris"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:orientation         = "vertical">
                <LinearLayout
                    android:layout_width            = "match_parent"
                    android:layout_height           = "wrap_content"
                    android:orientation             = "horizontal">
                    <LinearLayout
                        android:id                      = "@+id/lesson_physics"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_physics"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Fisika"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_chemical"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_chemical"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Kimia"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_biology"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_biology"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Biology"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/lesson_philosophy"
                        android:layout_width            = "74dp"
                        android:layout_height           = "wrap_content"
                        android:layout_marginLeft       = "18dp"
                        android:orientation             = "vertical">
                        <ImageView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "78dp"
                            android:src                     = "@drawable/ic_philosophy"/>
                        <TextView
                            android:layout_width            = "match_parent"
                            android:layout_height           = "wrap_content"
                            android:layout_marginTop        = "5dp"
                            android:text                    = "Filsafat"
                            android:textSize                = "13dp"
                            android:textStyle               = "bold"
                            android:textColor               = "@color/black"
                            android:gravity                 = "center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- History -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "25dp"
                android:text                = "Lanjutkan Belajar"
                android:textSize            = "20dp"
                android:textStyle           = "bold"
                android:textColor           = "@color/black"/>
            <LinearLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:orientation         = "vertical">
                <RelativeLayout
                    android:layout_width            = "match_parent"
                    android:layout_height           = "wrap_content">
                    <LinearLayout
                        android:id                      = "@+id/continue_1"
                        android:layout_width            = "170dp"
                        android:layout_height           = "wrap_content"
                        android:background              = "@drawable/bgeditlayout"
                        android:orientation             = "vertical">
                        <LinearLayout
                            android:layout_width            = "match_parent"
                            android:layout_height           = "132dp"
                            android:layout_margin           = "15dp"
                            android:orientation             = "vertical">
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:text                    = "FILSAFAT"
                                android:textSize                = "13dp"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:layout_marginTop        = "15dp"
                                android:text                    = "Bab 5.3"
                                android:textSize                = "12dp"/>
                            <TextView
                                android:layout_width            = "130dp"
                                android:layout_height           = "wrap_content"
                                android:text                    = "Teori Kebenaran Ilmiah"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/continue_2"
                        android:layout_width            = "170dp"
                        android:layout_height           = "wrap_content"
                        android:layout_alignParentRight = "true"
                        android:background              = "@drawable/bgeditlayout"
                        android:orientation             = "vertical">
                        <LinearLayout
                            android:layout_width            = "match_parent"
                            android:layout_height           = "132dp"
                            android:layout_margin           = "15dp"
                            android:orientation             = "vertical">
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:text                    = "FILSAFAT"
                                android:textSize                = "13dp"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:layout_marginTop        = "15dp"
                                android:text                    = "Bab 4.5"
                                android:textSize                = "12dp"/>
                            <TextView
                                android:layout_width            = "130dp"
                                android:layout_height           = "wrap_content"
                                android:text                    = "Logika Berpikir untuk Menemukan Kebenaran"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width            = "match_parent"
                    android:layout_height           = "wrap_content"
                    android:layout_marginTop        = "15dp">
                    <LinearLayout
                        android:id                      = "@+id/continue_3"
                        android:layout_width            = "170dp"
                        android:layout_height           = "wrap_content"
                        android:background              = "@drawable/bgeditlayout"
                        android:orientation             = "vertical">
                        <LinearLayout
                            android:layout_width            = "match_parent"
                            android:layout_height           = "132dp"
                            android:layout_margin           = "15dp"
                            android:orientation             = "vertical">
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:text                    = "FISIKA"
                                android:textSize                = "13dp"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:layout_marginTop        = "15dp"
                                android:text                    = "Bab 4.1"
                                android:textSize                = "12dp"/>
                            <TextView
                                android:layout_width            = "130dp"
                                android:layout_height           = "wrap_content"
                                android:text                    = "Landasan Mekanika Kuantum"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id                      = "@+id/continue_4"
                        android:layout_width            = "170dp"
                        android:layout_height           = "wrap_content"
                        android:layout_alignParentRight = "true"
                        android:background              = "@drawable/bgeditlayout"
                        android:orientation             = "vertical">
                        <LinearLayout
                            android:layout_width            = "match_parent"
                            android:layout_height           = "132dp"
                            android:layout_margin           = "15dp"
                            android:orientation             = "vertical">
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:text                    = "FISIKA"
                                android:textSize                = "13dp"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                            <TextView
                                android:layout_width            = "wrap_content"
                                android:layout_height           = "wrap_content"
                                android:layout_marginTop        = "15dp"
                                android:text                    = "Bab 3.6"
                                android:textSize                = "12dp"/>
                            <TextView
                                android:layout_width            = "130dp"
                                android:layout_height           = "wrap_content"
                                android:text                    = "Dualisme Gelombang Partikel"
                                android:textStyle               = "bold"
                                android:textColor               = "@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>